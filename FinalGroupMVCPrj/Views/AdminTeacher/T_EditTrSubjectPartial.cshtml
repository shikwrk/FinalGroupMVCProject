@model TCourseSubject
<!-- 編輯科目的modal彈跳視窗-->
<style>

</style>
<div class="modal fade " id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog " style="width:350px">
        <div class="modal-content p-3 ">
            <div class="modal-header">
                <h3 class="modal-title" id="staticBackdropLabel">可開課科目</h3>

                <button type="button" class="btn" data-bs-dismiss="modal" aria-label="Close"><i class="fa-solid fa-x"></i></button>
            </div>
            <!-- 老師名稱&電子郵件 -->
            <div><label id="labelTop"></label></div>
            <div class="modal-body" style="height:500px">
                <div class="col-md-9 col-sm-9">
                    <!-- 領域下拉選項 -->
                    <div class="form-group">
                        <label style="margin-bottom:10px;">領域</label>
                        <select style="width:205px" id="selectField" class="form-select">
                            <option>-</option>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-9 col-sm-9">
                        <!-- 科目下拉選項  -->
                        <div class="form-group">
                            <label style="margin-bottom:10px;margin-top:10px">科目</label>
                            <div>
                                <select  style="width:205px" id="selectSubject" data-placeholder="請選擇" multiple>
                                    <option>-</option>

                                </select>

                            </div>
                        </div>
                    </div>
                    <div class="col-md-1 col-sm-1">
                        <button id="buttonMove" type="button" class="btn btn-primary" value="儲存" style="margin-top:45px;background-color:#30c2ec;border-color:#30c2ec"><i class="fa-solid fa-plus"></i></button>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 col-sm-6">
                        <div class="form-group;">
                            <hr style="width:280px"><label style="margin-bottom:10px">可開課科目</label>
                            @* <select asp-for="FSubjectName" id="availableSubjects" class="form-control" data-placeholder="" multiple>
                            <option value="-" selected></option>
                            </select> *@
                            @* width:675px;height:40px *@
                            <div class="overflow-auto" style="width:300px;height:260px">
                                <ul class="list-group;" style="border:1px solid #BEBEBE;width:280px;padding:0" id="ulSubjectResult"></ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <input id="inpSubmit" type="button" class="btn btn-primary" style="background-color:#30c2ec;border-color:#30c2ec" value=" 儲存">
            </div>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/jquery@3.5.0/dist/jquery.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
<script>
    $('#selectSubject').select2({
        theme: "bootstrap-5",
        width: $(this).data('width') ? $(this).data('width') : $(this).hasClass('w-100') ? '100%' : 'style',
        placeholder: $(this).data('placeholder'),
        closeOnSelect: false,
    });
    $('#availableSubjects').select2({
        theme: "bootstrap-5",
        width: $(this).data('width') ? $(this).data('width') : $(this).hasClass('w-100') ? '100%' : 'style',
        placeholder: $(this).data('placeholder'),
        closeOnSelect: false,
    });
</script>
