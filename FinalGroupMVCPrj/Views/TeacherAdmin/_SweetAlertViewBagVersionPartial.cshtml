}
@if (ViewBag.Error != null)
{
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        Swal.fire({
            position: "center",
            icon: "error",
            title: "@ViewBag.Error",
            showConfirmButton: false,
            timer: 1500
        });
    </script>
}